<?xml version="1.0" encoding="utf-8"?>
<window>
	<coordinates>
		<left>10</left>
		<top>0</top>
	</coordinates>
	<controls>
		<visible>String.IsEmpty(Window(home).Property(script.cinemavision.running))</visible>
		<control type="group">
			<animation easing="inout" effect="slide" end="0,0" start="0,-225" time="200" tween="sine">WindowOpen</animation>
			<animation easing="inout" effect="slide" end="0,-225" start="0,0" time="200" tween="sine">WindowClose</animation>
			<control type="image">
				<!-- Dialog background image -->
				<left>-10</left>
				<top>-5</top>
				<width>700</width>
				<height>140</height>
				<texture>button-default.png</texture>
				<aspectratio>scale</aspectratio>
			</control>			
			<control type="image" id="400">
				<left>20</left>
				<top>20</top>
				<width>96</width>
				<height>96</height>
				<texture>DefaultIconInfo.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="label" id="401">
				<!-- Caption -->
				<left>160</left>
				<top>20</top>
				<width>520</width>
				<height>33</height>
				<font>stouch20</font>
				<align>left</align>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label" id="402">
				<!-- Description -->
				<left>160</left>
				<top>50</top>
				<width>520</width>
				<height>60</height>
				<font>stouch18</font>
				<align>left</align>
				<wrapmultiline>true</wrapmultiline>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
		</control>
	</controls>
</window>